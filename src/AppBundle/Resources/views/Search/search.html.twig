{% extends 'base.html.twig' %}


{% block body %}
    {% if searchterm is defined %}
        <h2>{{ 'app.search.search_results_for'|trans }}: <i>{{ searchterm }}</i></h2>
        <h4>{{ results }} {{ 'app.search.results'|trans|lower }}</h4>
    {% endif %}
    {% if users is defined %}
        {% if users is not empty %}
        <div class="table-responsive">
            <div class="pull-left">
                <h3>{{ 'app.entity.user'|transchoice(10) }}</h3>
            </div>
            <table class="table table-striped table-bordered table-hover" data-search="true" data-toggle="table" data-show-columns="true" data-select-item-name="user" data-toolbar="#user-toolbar" data-pagination="true" data-show-export="false">
                <thead>
                <tr>
                    <th data-sortable="false" data-align="center" data-switchable="false"></th>
                    <th data-sortable="true" data-field="lastname" >{{ 'app.form.last_name'|trans }}</th>
                    <th data-sortable="true" data-field="firstname" >{{ 'app.form.first_name'|trans }}</th>
                    <th data-sortable="true" data-field="department" >{{ 'app.form.department'|trans }}</th>
                    <th data-sortable="true" data-field="organ" >{{ 'app.form.organ'|trans }}</th>
                    <th data-sortable="true" data-field="fraction" >{{ 'app.form.fraction'|trans }}</th>
                    <th data-sortable="true" data-field="function" >{{ 'app.form.function'|trans }}</th>
                    <th data-sortable="true" data-field="status" >{{ 'app.form.status'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('profile', {'username': user.username}) }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>
                                {% for usergroup in user.usergroups %}
                                    {% if usergroup.group.type == 'Department' %}
                                        <abbr title="{{ usergroup.group.name|capitalize }}">{{ usergroup.group.groupinfo.shortname }}</abbr>
                                        <br />
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% for usergroup in user.usergroups %}
                                    {% if usergroup.group.type == 'Organ' %}
                                        <abbr title="{{ usergroup.group.name|capitalize }}">{{ usergroup.group.groupinfo.shortname }}</abbr>
                                        <br />
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% for usergroup in user.usergroups %}
                                    {% if usergroup.group.type == 'Fraction' %}
                                        <abbr title="{{ usergroup.group.name|capitalize }}">{{ usergroup.group.groupinfo.shortname }}</abbr>
                                        <br />
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% for userroles in user.usergroups %}
                                    {% if userroles.group.id == app.session.get('department').id %}
                                        {% for role in userroles.roles %}
                                            {% if role == 'ROLE_SUPER_ADMIN'%}
                                                {% set title = 'app.user.roles.super_admin'|trans %}
                                            {% elseif role == 'ROLE_ADMIN'%}
                                                {% set title = 'app.user.roles.admin'|trans %}
                                            {% elseif role == 'ROLE_USER++'%}
                                                {% set title = 'app.user.roles.user++'|trans %}
                                            {% elseif role == 'ROLE_USER+'%}
                                                {% set title = 'app.user.roles.user+'|trans %}
                                            {% elseif role == 'ROLE_USER'%}
                                                {% set title = 'app.user.roles.user'|trans %}
                                            {% endif %}
                                            <abbr title="{{ title }}">{{ role }}</abbr>
                                            <br />
                                        {% endfor %}
                                    {% endif %}
                                {% endfor %}
                            </td>
                            {% if user.status == 0 %}
                            <td class="warning">
                                {% elseif user.status == 2 %}
                            <td class="success">
                                {% else %}
                            <td class="danger">
                                {% endif %}
                                {{ 'app.user.status'|transchoice(user.status) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
    {% endif %}
    {% if departments is defined %}
        {% if departments is not empty %}
            <div class="table-responsive">
                <div class="pull-left">
                    <h3>{{ 'app.entity.department'|transchoice(10) }}</h3>
                </div>
                <table class="table table-striped table-bordered table-hover" data-search="true" data-toggle="table" data-show-columns="true" data-select-item-name="department" data-toolbar="#department-toolbar" data-pagination="true" data-show-export="false">
                    <thead>
                    <tr>
                        <th data-sortable="false" data-align="center" data-switchable="false"></th>
                        <th data-sortable="true" data-field="name">{{ 'app.form.name'|trans }}</th>
                        <th data-sortable="true" data-field="shortname" >{{ 'app.form.abbreviation'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for department in departments %}
                            <tr>
                                <td><a href="{{ path('group', {'organisationName': app.session.get('organisation'), 'groupName': department.name}) }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                                <td>{{ department.name }}</td>
                                <td>{{ department.groupInfo.shortName }} </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    {% endif %}
    {% if organs is defined %}
        {% if organs is not empty %}
            <div class="table-responsive">
                <div class="pull-left">
                    <h3>{{ 'app.entity.organ'|transchoice(10) }}</h3>
                </div>
                <table class="table table-striped table-bordered table-hover" data-search="true" data-toggle="table" data-show-columns="true" data-select-item-name="organ" data-toolbar="#organ-toolbar" data-pagination="true" data-show-export="false">
                    <thead>
                    <tr>
                        <th data-sortable="false" data-align="center" data-switchable="false"></th>
                        <th data-sortable="true" data-field="name">{{ 'app.form.name'|trans }}</th>
                        <th data-sortable="true" data-field="shortname" >{{ 'app.form.abbreviation'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for organ in organs %}
                            <tr>
                                <td><a href="{{ path('group', {'organisationName': app.session.get('organisation'), 'groupName': organ.name}) }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                                <td>{{ organ.name }}</td>
                                <td>{{ organ.groupInfo.shortName }} </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}
    {% endif %}
    {% if fractions is defined %}
        {% if fractions is not empty %}
    <div class="table-responsive">
        <div class="pull-left">
            <h3>{{ 'app.entity.fraction'|transchoice(10) }}</h3>
        </div>
        <table class="table table-striped table-bordered table-hover" data-search="true" data-toggle="table" data-show-columns="true" data-select-item-name="fraction" data-toolbar="#fraction-toolbar" data-pagination="true" data-show-export="false">
            <thead>
            <tr>
                <th data-sortable="false" data-align="center" data-switchable="false"></th>
                <th data-sortable="true" data-field="name">{{ 'app.form.name'|trans }}</th>
                <th data-sortable="true" data-field="shortname" >{{ 'app.form.abbreviation'|trans }}</th>
            </tr>
            </thead>
            <tbody>
                {% for fraction in fractions %}
                    <tr>
                        <td><a href="{{ path('group', {'organisationName': app.session.get('organisation'), 'groupName': fraction.name}) }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                        <td>{{ fraction.name }}</td>
                        <td>{{ fraction.groupInfo.shortName }} </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
    {% endif %}
    {% if organisations is defined %}
        {% if organisations is not empty %}
    <div class="table-responsive">
        <div class="pull-left">
            <h3>{{ 'app.entity.organisation'|transchoice(10) }}</h3>
        </div>
        <table class="table table-striped table-bordered table-hover" data-search="true" data-toggle="table" data-show-columns="true" data-select-item-name="organisation" data-toolbar="#organisation-toolbar" data-pagination="true" data-show-export="false">
            <thead>
            <tr>
                <th data-sortable="false" data-align="center" data-switchable="false"></th>
                <th data-sortable="true" data-field="name">{{ 'app.form.name'|trans }}</th>
                <th data-sortable="true" data-field="shortname" >{{ 'app.form.abbreviation'|trans }}</th>
            </tr>
            </thead>
            <tbody>
                {% for organisation in organisations %}
                    <tr>
                        <td><a href="{{ path('group', {'organisationName': organisation.name}) }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                        <td>{{ organisation.name }}</td>
                        <td>{{ organisation.groupInfo.shortName }} </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
    {% endif %}
{% endblock %}